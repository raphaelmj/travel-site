extends ../layouts/layout.pug

block header
    include ../partials/banner-articles.pug
    include ../partials/submenu.pug
    
block content
    section.blog
        .double-container
            .row
                .col-left-double
                    section.blog-one-cnt
                        each art,i in blog.articles
                            section.blog-one(class=(i % 2==1)?'odd':'even')
                                .container
                                    .row
                                        .col-articles
                                            
                                                if(i % 2==1)
                                                    .row-article.odd
                                                        .col-left
                                                            h2.art-title #{art.title}
                                                            +date_string(art.publishedAt)
                                                            .content-text
                                                                | !{art.smallDesc}
                                                            .more-beam
                                                                a(href=path+"/"+art.alias class="arrow-btn orange-btn") Czytaj więcej   
                                                        .col-right
                                                            img(src=art.image class="img-fluid")
                                                else
                                                    .row-article.even
                                                        .col-left
                                                            img(src=art.image class="img-fluid")
                                                        .col-right
                                                            h2.art-title #{art.title}
                                                            +date_string(art.publishedAt)
                                                            .content-text
                                                                | !{art.smallDesc}
                                                            .more-beam
                                                                a(href=path+"/"+art.alias class="arrow-btn orange-btn") Czytaj więcej 
                    include ../partials/pagination.pug
                .col-right-double
                    .right-content-db
                        include ../partials/partners.pug

block footer
    include ../partials/contact-section.pug
    include ../partials/pswp.pug