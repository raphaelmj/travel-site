extends ../layouts/layout.pug

block header
    include ../partials/banner-invoice.pug
    include ../partials/submenu.pug
    
block content
    -var regDesc = widgets.invoice.data.regDesc.replace(/(\r\n|\n|\r)/gm, ""); 
    script.
        var formType = 'invoice';
        var regDesc = "!{regDesc}";
    .double-container.form-view
        .row
            .col-left-double
                .container
                    .row
                        .col-desc
                            | !{widgets.invoice.data.topDesc}
                        .col-form
                            app-root

            .col-right-double
                .right-content-db
                    include ../partials/partners.pug

block footer
    include ../partials/contact-section.pug
    include ../partials/pswp.pug
    include ../partials/ngwform-scripts.pug

